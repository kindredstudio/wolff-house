{% if post.title == 'Home' %}
  <meta content="website" property="og:type">
  <meta property="og:title" content="{{ post.title }}">
  <meta property="og:description" content="{{ site.description }}">
{% elseif post.post_type == 'post' %}
  <meta content="article" property="og:type">
  <meta property="og:title" content="{{ post.title }}">
  {% if post.thumbnail %}
    <meta content="{{ post.thumbnail.src }}" property="og:image">
  {% endif %}
{% else %}
  <meta property="og:title" content="{{ post.title }}">
  <meta property="og:description" content="{{ post.preview.length(20).read_more(false) }}">
{% endif %}
<meta property="og:url" content="{{ post.link }}">
<meta property="og:site_name" content="{{ site.name }}">

{# <meta content="@{{ settings.social_twitter_link | split: 'twitter.com/' | last }}" name="twitter:site"> #}

{% if post.post_type == 'post' and post.thumbnail %}
  <meta content="summary_large_image" name="twitter:card">
{% else %}
  <meta content="summary" name="twitter:card">
{% endif %}
{% if post.title == 'Home' %}
  <meta name="twitter:title" content="{{ post.title }}">
  <meta name="twitter:description" content="{{ site.description }}">
{% elseif post.post_type == 'post' %}
  <meta name="twitter:title" content="{{ post.title }}">
  <meta name="twitter:description" content="{{ post.preview.length(20).read_more(false) }}">
  {% if post.thumbnail %}
    <meta content="{{ post.thumbnail.src }}" property="twitter:image">
  {% endif %}
{% endif %}

