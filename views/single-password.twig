{% extends "base.twig" %}

{% block content %}
	<section class="page-locked">
		<div class="inner wrap flex-center">
			<form class="password-form" action="/wp-login.php?action=postpass" method="post">
				<label class="h1" for="pwbox-{{post.ID}}">Password Required</label>
				<input class="password-box" name="post_password" id="pwbox-{{post.ID}}" type="password" placeholder="enter password" size="20" maxlength="20" />
				<input class="button button-primary" type="submit" name="Submit" value="Submit" />
			</form>
		</section>
		</div>
{% endblock %}
